<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <ImageView
        android:id= "@+id/postImageForAnnoucement"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <EditText
        android:id="@+id/postEditTextforAnnoucements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your Post"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@android:color/black"
        android:textColorHighlight="#FF8F00"
        android:textColorLink="#FF8F00"
        android:textCursorDrawable="@color/colorPrimary" />
    <View
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#141414"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <View
            android:layout_margin="3dp"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#141414"
            />
        <Button
            android:id="@+id/post_button_for_annoucement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="UpdatePost1"
            android:layout_weight="2"
            android:background="@color/cardview_light_background"
            android:text="Create NewPost" />
        <View
            android:layout_margin="3dp"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#141414"
            />
        <ImageButton
            android:id="@+id/addImageforAnnoucementButton"
            android:onClick="OpenGallery1"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            app:srcCompat="@drawable/ic_menu_camera" />
        <View
            android:layout_margin="3dp"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#141414"
            />

    </LinearLayout>
    <View
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#141414"
        />




</LinearLayout>
</ScrollView>