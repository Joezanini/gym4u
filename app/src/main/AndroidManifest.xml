<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gym4u">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Urheart"
            android:label="@string/title_activity_urheart"
            android:parentActivityName=".Client_Home"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gym4u.Client_Home" />
        </activity>
        <activity
            android:name=".Urgym"
            android:label="@string/title_activity_urgym"
            android:parentActivityName=".Client_Home"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gym4u.Client_Home" />
        </activity>
        <activity
            android:name=".Announcement"
            android:label="@string/title_activity_announcement"
            android:parentActivityName=".Client_Home"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gym4u.Client_Home" />
        </activity>
        <activity
            android:name=".Wall"
            android:label="@string/title_activity_wall"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gym4u.Client_Home" />
        </activity>
        <activity
            android:name=".Client_Home"
            android:label="@string/title_activity_client__home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ClientRegister" />
        <activity android:name=".ClientLogin" />
        <activity android:name=".InstructorRegister" />
        <activity android:name=".InstructorLogin" />
        <activity
            android:name=".ui.login.InstructorLoginActivity"
            android:label="@string/title_activity_instructor_login"
            android:parentActivityName=".GettingStartedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gym4u.GettingStartedActivity" />
        </activity>
        <activity
            android:name=".ui.login.LoginActivityInstructor"
            android:label="@string/title_activity_login_instructor" />
        <activity android:name=".GettingStartedActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>